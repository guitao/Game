package com.ui
{
    import assets.*;
    import flash.display.*;
    import flash.events.*;

    public class FSBtn extends Sprite
    {
        private var _s:BtnFsAndExit;

        public function FSBtn()
        {
            this._s = new BtnFsAndExit();
            if (stage)
            {
                this.init();
            }
            else
            {
                addEventListener(Event.ADDED_TO_STAGE, this.init);
            }
            MovieClip(this._s).gotoAndStop(1);
            addChild(this._s);
            buttonMode = true;
            return;
        }// end function

        private function goFs(param1:Boolean) : void
        {
            MovieClip(this._s).gotoAndStop(param1 ? (2) : (1));
            return;
        }// end function

        private function onFs(event:FullScreenEvent) : void
        {
            this.goFs(event.fullScreen);
            return;
        }// end function

        private function init(event:Event = null) : void
        {
            removeEventListener(Event.ADDED_TO_STAGE, this.init);
            stage.addEventListener(FullScreenEvent.FULL_SCREEN, this.onFs);
            return;
        }// end function

    }
}
