package com.ui
{
    import hsuan.*;

    public class SetReKUi extends SetUiBase
    {

        public function SetReKUi()
        {
            _panel.x = 105;
            _panel.y = 20;
            addOption("默认不复权", _cfg.reK < 1);
            addOption("默认使用前复权", _cfg.reK == 1);
            addOption("默认使用后复权", _cfg.reK > 1);
            return;
        }// end function

        override protected function toSave() : void
        {
            var _loc_1:uint = 0;
            while (_loc_1 < _opArr.length)
            {
                
                if (SingleOption(_opArr[_loc_1]).s)
                {
                    break;
                }
                _loc_1 = _loc_1 + 1;
            }
            if (_so)
            {
                _so.data.reK = _loc_1;
            }
            _cfg.reK = _loc_1;
            showNotice(130);
            return;
        }// end function

    }
}
