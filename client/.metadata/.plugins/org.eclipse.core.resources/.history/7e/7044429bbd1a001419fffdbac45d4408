package com.sina.finance.ui
{

    public class LineCandleRect extends LineRect
    {

        public function LineCandleRect(param1:uint = 1, param2:uint = 0, param3:Number = 1, param4:Boolean = false)
        {
            super(param1, param2, param3, param4);
            return;
        }// end function

        override public function drawRect(param1:Number, param2:Number, param3:Number, param4:Number) : void
        {
            if (param3 <= 1.8)
            {
                _line.graphics.moveTo(param1 + param3 / 2, param2 + param4);
                _line.graphics.lineTo(param1 + param3 / 2, param2);
            }
            else if (param4 <= 1)
            {
                _line.graphics.moveTo(param1, param2);
                _line.graphics.lineTo(param1 + param3, param2);
            }
            else
            {
                _line.graphics.moveTo(param1, param2);
                _line.graphics.beginFill(_styleObj.color, _styleObj.alpha);
                _line.graphics.drawRect(param1, param2, param3, param4);
                _line.graphics.endFill();
            }
            return;
        }// end function

        override public function drawCandleRect(param1:Number, param2:Number, param3:Number, param4:Number, param5:Number, param6:Number) : void
        {
            if (param6 < 35)
            {
                this.drawRect(param1 + param6 * 0.2, param3, param6 * 0.6, param4 - param3);
            }
            else
            {
                this.drawRect(param1 + (param6 - MIN_W) * 0.5, param3, MIN_W, param4 - param3);
            }
            if (_styleObj.color == _cfg.cfontFall)
            {
                _ys.push(param4);
            }
            else
            {
                _ys.push(param3);
            }
            var _loc_7:* = param1 + param6 / 2;
            _line.graphics.moveTo(_loc_7, param2);
            _line.graphics.lineTo(_loc_7, param3);
            _line.graphics.moveTo(_loc_7, param4);
            _line.graphics.lineTo(_loc_7, param5);
            _xs.push(_loc_7);
            return;
        }// end function

    }
}
