package hsuan
{
    import flash.display.*;
    import flash.events.*;

    public class AColor extends Sprite
    {
        private var _outline:Sprite;
        private const SQUARE:uint = 15;
        private var _colorValue:uint;

        public function AColor(param1:uint)
        {
            this._colorValue = param1;
            this.graphics.beginFill(param1);
            this.graphics.drawRect(0, 0, this.SQUARE, this.SQUARE);
            this.graphics.endFill();
            this.initOutline();
            this.buttonMode = true;
            this.addEventListener(MouseEvent.MOUSE_OVER, this.mouseOver);
            this.addEventListener(MouseEvent.MOUSE_OUT, this.mouseOut);
            return;
        }// end function

        private function mouseOver(event:MouseEvent) : void
        {
            this._outline.visible = true;
            return;
        }// end function

        public function removeOutline() : void
        {
            this.mouseOut(null);
            return;
        }// end function

        private function mouseOut(event:MouseEvent) : void
        {
            this._outline.visible = false;
            return;
        }// end function

        private function initOutline() : void
        {
            this._outline = new Sprite();
            this._outline.graphics.clear();
            this._outline.graphics.moveTo(0, 0);
            this._outline.graphics.lineStyle(2, 0, 1, true);
            this._outline.graphics.drawRect(0, 0, this.SQUARE, this.SQUARE);
            this._outline.visible = false;
            this.addChild(this._outline);
            return;
        }// end function

        public function get colorValue() : uint
        {
            return this._colorValue;
        }// end function

    }
}
