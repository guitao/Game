package hsuan
{
    import flash.display.*;
    import flash.text.*;

    public class SingleOption extends Sprite
    {
        private var _s:Boolean;
        private var _cfg:Config;

        public function SingleOption(param1:String, param2:Boolean = false)
        {
            this._cfg = Config.getInstance();
            buttonMode = true;
            this.change(param2);
            var _loc_3:* = new TextField();
            _loc_3.autoSize = "left";
            _loc_3.defaultTextFormat = new TextFormat("arial", 12, this._cfg.LB_COLOR);
            _loc_3.mouseEnabled = false;
            _loc_3.text = param1;
            _loc_3.x = 10;
            addChild(_loc_3);
            return;
        }// end function

        public function change(param1:Boolean) : void
        {
            this._s = param1;
            graphics.beginFill(param1 ? (0) : (16777215));
            graphics.drawCircle(0, 9, 4);
            graphics.endFill();
            graphics.lineStyle(0, 12436431);
            graphics.drawCircle(0, 9, 6);
            return;
        }// end function

        public function get s() : Boolean
        {
            return this._s;
        }// end function

    }
}
