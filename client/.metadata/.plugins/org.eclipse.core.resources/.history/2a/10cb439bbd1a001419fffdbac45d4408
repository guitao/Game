package com.sina.finance.ui
{
    import com.sina.finance.data.*;

    public class LinesC extends LinesPad
    {
        private var _lines:Array;
        private var _cdatas:Array;

        public function LinesC(param1:Array)
        {
            this._cdatas = param1;
            this._lines = [];
            var _loc_2:uint = 0;
            while (_loc_2 < param1.length)
            {
                
                this._lines.push(new LineCurve(1, _cfg.clineCompares[_loc_2], 1, false));
                addChild(this._lines[_loc_2]);
                _loc_2 = _loc_2 + 1;
            }
            return;
        }// end function

        override public function draw(param1:uint = 24) : void
        {
            var _loc_2:Array = null;
            var _loc_3:Array = null;
            var _loc_4:LineCurve = null;
            var _loc_7:Number = NaN;
            var _loc_8:Number = NaN;
            var _loc_9:uint = 0;
            var _loc_10:uint = 0;
            while (this._lines.length < this._cdatas.length)
            {
                
                this._lines.push(new LineCurve(1, _cfg.clineCompares[this._lines.length], 1, false));
                addChild(this._lines[(this._lines.length - 1)]);
            }
            while (this._lines.length > this._cdatas.length)
            {
                
                if (this.contains(this._lines[(this._lines.length - 1)]))
                {
                    this.removeChild(this._lines[(this._lines.length - 1)]);
                }
                this._lines.pop();
            }
            var _loc_5:* = this._cdatas.length;
            var _loc_6:uint = 0;
            while (_loc_6 < _loc_5)
            {
                
                _loc_3 = TDataBase(this._cdatas[_loc_6]).tdataObj.poses;
                _loc_2 = TDataBase(this._cdatas[_loc_6]).tdataObj.datas;
                if (_loc_3 == null)
                {
                    return;
                }
                _loc_4 = this._lines[_loc_6];
                _loc_4.clear(true);
                _loc_7 = _cfg.TW / _loc_2.length;
                _loc_8 = _loc_7 * 0.5;
                _loc_9 = TDataBase(this._cdatas[_loc_6]).tdataObj.realLen;
                _loc_10 = 0;
                while (_loc_10 <= _loc_9)
                {
                    
                    if (_loc_10 == 0)
                    {
                        _loc_4.moveTo(_loc_8, _loc_3[_loc_10].percent);
                    }
                    else
                    {
                        _loc_4.lineTo(_loc_8, _loc_3[_loc_10].percent);
                    }
                    _loc_8 = _loc_8 + _loc_7;
                    _loc_10 = _loc_10 + 1;
                }
                _loc_6 = _loc_6 + 1;
            }
            return;
        }// end function

        override public function interactiveEnd() : void
        {
            var _loc_1:uint = 0;
            while (_loc_1 < this._cdatas.length)
            {
                
                if (!this._lines[_loc_1])
                {
                }
                else
                {
                    LineCurve(this._lines[_loc_1]).interactiveEnd();
                }
                _loc_1 = _loc_1 + 1;
            }
            return;
        }// end function

        override public function interactiveTo(param1:uint) : void
        {
            var _loc_2:uint = 0;
            while (_loc_2 < this._cdatas.length)
            {
                
                if (!this._lines[_loc_2])
                {
                }
                else
                {
                    LineCurve(this._lines[_loc_2]).interactiveTo(param1);
                }
                _loc_2 = _loc_2 + 1;
            }
            return;
        }// end function

    }
}
