package stock.com.ui.elements.xpainting.painter
{
    import com.image.paintTool.*;
    import flash.display.*;
    import flash.events.*;
    import flash.geom.*;
    import stock.com.ui.elements.xpainting.*;

    public class UpMarkXPainter extends XPainter
    {
        private var startP:Point;

        public function UpMarkXPainter()
        {
            this.init();
            return;
        }// end function

        private function init() : void
        {
            squares = [];
            hideSmallSquare();
            super.addEventListener(MouseEvent.MOUSE_DOWN, this.onMouseDown);
            return;
        }// end function

        private function onMouseUp(event:MouseEvent) : void
        {
            super.stopDrag();
            super.removeEventListener(MouseEvent.MOUSE_UP, this.onMouseUp);
            return;
        }// end function

        override public function begingPaint(param1:Sprite, param2:Stage, param3:Rectangle, param4:Point) : void
        {
            var _loc_5:Sprite = null;
            this.startP = param4;
            if (Xpainting.area == Xpainting.CNASTOCK)
            {
                _loc_5 = new RedUpMarkIcon();
            }
            else
            {
                _loc_5 = new YellowUpMarkIcon();
            }
            _loc_5.x = this.startP.x;
            _loc_5.y = this.startP.y;
            super.addChild(_loc_5);
            endPaint();
            return;
        }// end function

        private function onMouseDown(event:MouseEvent) : void
        {
            super.startDrag();
            super.addEventListener(MouseEvent.MOUSE_UP, this.onMouseUp);
            return;
        }// end function

        override public function destroy() : void
        {
            super.destroy();
            super.removeEventListener(MouseEvent.MOUSE_DOWN, this.onMouseDown);
            return;
        }// end function

    }
}
