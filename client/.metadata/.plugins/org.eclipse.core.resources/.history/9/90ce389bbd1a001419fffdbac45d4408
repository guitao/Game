package com.sina.finance.data
{

    public class UrlHashDecoder extends Object
    {
        private static const WEEK_K:String = "kw";
        private static const TIME_SHARE_5:String = "t5";
        private static const MIN_K_15:String = "k15";
        private static const DAY_K:String = "kd";
        public static const FAKE_T5DAY_ID:int = 2;
        public static const MIN_K_30_ID:int = 30;
        private static const MIN_K_5:String = "k5";
        public static const TIME_SHARE:String = "ts";
        public static const MONTH_K_ID:int = 720;
        public static const TIME_SHARE_ID:int = 0;
        public static const MIN_K_5_ID:int = 5;
        private static const MIN_K_30:String = "k30";
        private static const MIN_K_60:String = "k60";
        public static const CLOSE_LINE_ID:int = 3;
        public static const ALL_NAMES_REG:RegExp = new RegExp("(\\b" + TIME_SHARE + "\\b)|(\\b" + TIME_SHARE_5 + "\\b)|(\\b" + CLOSE_LINE + "\\b)|(\\b" + DAY_K + "\\b)|(\\b" + WEEK_K + "\\b)|(\\b" + MONTH_K + "\\b)|(\\b" + MIN_K_5 + "\\b)|(\\b" + MIN_K_15 + "\\b)|(\\b" + MIN_K_30 + "\\b)|(\\b" + MIN_K_60 + "\\b)", "i");
        private static const MONTH_K:String = "km";
        public static const MIN_K_15_ID:int = 15;
        public static const DAY_K_ID:int = 24;
        public static const WEEK_K_ID:int = 168;
        private static const CLOSE_LINE:String = "cl";
        public static const MIN_K_60_ID:int = 60;

        public function UrlHashDecoder()
        {
            return;
        }// end function

        public static function getIdFromWord(param1:String) : int
        {
            switch(param1)
            {
                default:
                {
                    return TIME_SHARE_ID;
                }
                case CLOSE_LINE:
                {
                    return FAKE_T5DAY_ID;
                }
                case DAY_K:
                {
                    return CLOSE_LINE_ID;
                }
                case WEEK_K:
                {
                    return DAY_K_ID;
                }
                case MONTH_K:
                {
                    return WEEK_K_ID;
                }
                case MIN_K_5:
                {
                    return MONTH_K_ID;
                }
                case MIN_K_15:
                {
                    return MIN_K_5_ID;
                }
                case MIN_K_30:
                {
                    return MIN_K_15_ID;
                }
                case MIN_K_60:
                {
                    return MIN_K_30_ID;
                }
                case :
                {
                    return MIN_K_60_ID;
                    break;
                }
            }
        }// end function

        public static function getWordFromId(param1:int, param2:Boolean) : String
        {
            switch(param1)
            {
                default:
                {
                    return "";
                }
                case CLOSE_LINE_ID:
                {
                    return TIME_SHARE_5;
                }
                case DAY_K_ID:
                {
                    return CLOSE_LINE;
                }
                case WEEK_K_ID:
                {
                    return DAY_K;
                }
                case MONTH_K_ID:
                {
                    return WEEK_K;
                }
                case 5:
                {
                    return MONTH_K;
                }
                case MIN_K_15_ID:
                {
                    if (param2)
                    {
                        return TIME_SHARE;
                    }
                    return MIN_K_5;
                }
                case MIN_K_30_ID:
                {
                    return MIN_K_15;
                }
                case MIN_K_60_ID:
                {
                    return MIN_K_30;
                }
                case :
                {
                    return MIN_K_60;
                    break;
                }
            }
        }// end function

    }
}
