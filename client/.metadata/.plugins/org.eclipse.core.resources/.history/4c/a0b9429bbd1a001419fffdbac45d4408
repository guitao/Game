package com.sina.finance.ui
{

    public class LineCurve extends LineBase
    {
        private var _moveToed:Boolean = false;

        public function LineCurve(param1:uint = 1, param2:uint = 0, param3:Number = 1, param4:Boolean = false)
        {
            super(param1, param2, param3, param4);
            return;
        }// end function

        override public function moveTo(param1:Number, param2:Number) : void
        {
            _line.graphics.moveTo(param1, param2);
            _xs.push(param1);
            _ys.push(param2);
            this._moveToed = true;
            return;
        }// end function

        override public function lineTo(param1:Number, param2:Number) : void
        {
            if (!this._moveToed)
            {
                this.moveTo(param1, param2);
                return;
            }
            _line.graphics.lineTo(param1, param2);
            _xs.push(param1);
            _ys.push(param2);
            return;
        }// end function

    }
}
