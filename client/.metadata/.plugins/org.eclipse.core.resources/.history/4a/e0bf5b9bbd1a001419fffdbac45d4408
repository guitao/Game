package stock.com.ui.elements
{
    import flash.display.*;
    import flash.geom.*;
    import flash.utils.*;
    import hsuan.*;

    public class ImgHandler extends Object
    {

        public function ImgHandler()
        {
            return;
        }// end function

        public static function getPNGData(param1:IBitmapDrawable, param2:Rectangle) : ByteArray
        {
            var _loc_3:* = getBitMapData(param1, param2);
            return PNGEncoder.encode(_loc_3);
        }// end function

        public static function getBitMapData(param1:IBitmapDrawable, param2:Rectangle) : BitmapData
        {
            var _loc_3:* = new BitmapData(param2.width, param2.height);
            var _loc_4:* = new Matrix(1, 0, 0, 1, -param2.x, -param2.y);
            _loc_3.draw(param1, _loc_4, null, null, new Rectangle(0, 0, param2.width, param2.height));
            return _loc_3;
        }// end function

    }
}
