package com.sina.finance.ui
{
    import flash.display.*;
    import flash.events.*;

    public class Bar extends Sprite
    {
        private var _h:uint;
        private var _isDown:Boolean;
        private var _w:uint;
        private var _isOver:Boolean;

        public function Bar(param1:Number, param2:Number) : void
        {
            this.resize(param1, param2);
            addEventListener(MouseEvent.MOUSE_OVER, this.onMsOverOut);
            addEventListener(MouseEvent.MOUSE_OUT, this.onMsOverOut);
            buttonMode = true;
            return;
        }// end function

        public function set useable(param1:Boolean) : void
        {
            if (param1)
            {
                this.addEventListener(MouseEvent.MOUSE_OVER, this.onMsOverOut);
                this.addEventListener(MouseEvent.MOUSE_OUT, this.onMsOverOut);
            }
            else
            {
                this._isDown = false;
                this._isOver = false;
                this.removeEventListener(MouseEvent.MOUSE_OVER, this.onMsOverOut);
                this.removeEventListener(MouseEvent.MOUSE_OUT, this.onMsOverOut);
            }
            this.redraw();
            return;
        }// end function

        public function get isDown() : Boolean
        {
            return this._isDown;
        }// end function

        public function resize(param1:Number, param2:Number) : void
        {
            this._w = param1;
            this._h = param2;
            this.redraw();
            return;
        }// end function

        private function onMsOverOut(event:MouseEvent) : void
        {
            this._isOver = event.type == MouseEvent.MOUSE_OVER;
            this.redraw();
            return;
        }// end function

        private function redraw() : void
        {
            var _loc_1:* = this._isDown ? (true) : (this._isOver);
            var _loc_2:* = _loc_1 ? (12040119) : (16777215);
            var _loc_3:* = _loc_1 ? (14540253) : (3882818);
            var _loc_4:* = this._h * 0.65;
            var _loc_5:* = (this._h - _loc_4) * 0.5;
            this.graphics.clear();
            if (_loc_1)
            {
                this.graphics.beginFill(0, 0);
                this.graphics.drawRect(-8, _loc_5, this._w + 8, _loc_4);
                this.graphics.endFill();
            }
            this.graphics.lineStyle(0, 0, 1, true, "none");
            this.graphics.beginFill(_loc_2);
            this.graphics.drawRoundRect((-this._w) * 0.5, _loc_5, this._w, _loc_4, 5);
            this.graphics.endFill();
            this.graphics.moveTo(0, 0);
            this.graphics.lineTo(0, _loc_5);
            this.graphics.moveTo(0, this._h - _loc_5);
            this.graphics.lineTo(0, (this._h + 1));
            this.graphics.lineStyle(0, _loc_3);
            this.graphics.moveTo(-2, _loc_5 * 2);
            this.graphics.lineTo(-2, this._h - _loc_5 * 2);
            this.graphics.moveTo(2, _loc_5 * 2);
            this.graphics.lineTo(2, this._h - _loc_5 * 2);
            return;
        }// end function

        public function set isDown(param1:Boolean) : void
        {
            this._isDown = param1;
            this.redraw();
            return;
        }// end function

    }
}
